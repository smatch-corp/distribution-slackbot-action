{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "rootDir": ".",
    "moduleResolution": "Bundler",
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "newLine": "lf",
    "types": ["vite/client", "vitest/importMeta"]
  },
  "include": ["./src/**/*.ts", "vitest.config.ts"],
  "exclude": [
    "./dist",
    "./node_modules",
    "./coverage",
    "./__tests__",
    "package.json"
  ]
}
